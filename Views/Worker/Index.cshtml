@model IEnumerable<RepairAndConstructionService.Models.Worker>

@{
    ViewData["Title"] = "Workers";
}

<div class="container mt-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-black"><i class="fas fa-people-carry"></i> Our Workers</h2>
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Add New Worker</a>
    </div>

    <!-- Worker Cards -->
    <div class="row">
        @foreach (var worker in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body text-center">
                        <i class="fas fa-user-circle fa-3x text-secondary mb-2"></i> <!-- Worker Icon -->
                        <h5 class="fw-semibold text-black">@worker.Name</h5>
                        <p class="text-black"><i class="fas fa-toolbox"></i> @worker.Specialization</p>
                        <span class="badge bg-success text-white"><i class="fas fa-star"></i> @worker.Rating</span>

                        <!-- Action Buttons -->
                        <div class="mt-3">
                            <a asp-action="Edit" asp-route-id="@worker.Id" class="btn btn-warning btn-sm text-black">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@worker.Id" class="btn btn-info btn-sm text-white">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@worker.Id" class="btn btn-danger btn-sm text-white">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
