@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section with Background Color -->
<div class="hero-section text-white text-center d-flex align-items-center justify-content-center" style="
    background: linear-gradient(90deg, #007bff, #0056b3);
    height: 350px;">
    <div class="container">
        <h1 class="display-4 fw-bold">Welcome to Repair & Construction Services</h1>
        <p class="lead">Professional, reliable, and affordable home improvement solutions.</p>
        <a asp-controller="Service" asp-action="Index" class="btn btn-light btn-lg me-3">Explore Services</a>
        <a asp-controller="Booking" asp-action="Create" class="btn btn-outline-light btn-lg">Book a Service</a>
    </div>
</div>

<!-- Main Content Background -->
<div style="background: #f8f9fa; padding: 30px 0;">
    <!-- Featured Services Section -->
    <div class="container text-center mt-5">
        <h2 class="fw-bold">Our Services</h2>
        <p class="text-muted">We offer a wide range of home repair and construction services.</p>
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <i class="fas fa-tools fa-3x mb-3 text-primary"></i>
                        <h5 class="card-title">Plumbing</h5>
                        <p class="card-text">Fix leaks, install new plumbing, and handle all water system issues.</p>
                        <a asp-controller="Service" asp-action="Index" class="btn btn-outline-primary">View Services</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <i class="fas fa-bolt fa-3x mb-3 text-primary"></i>
                        <h5 class="card-title">Electrical Work</h5>
                        <p class="card-text">Reliable electrical installation and repair by certified professionals.</p>
                        <a asp-controller="Service" asp-action="Index" class="btn btn-outline-primary">View Services</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <i class="fas fa-paint-roller fa-3x mb-3 text-primary"></i>
                        <h5 class="card-title">Painting & Renovation</h5>
                        <p class="card-text">Give your home a fresh new look with our painting & remodeling services.</p>
                        <a asp-controller="Service" asp-action="Index" class="btn btn-outline-primary">View Services</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Customer Testimonials Section -->
    <div class="bg-white py-5 mt-5">
        <div class="container text-center">
            <h2 class="fw-bold">What Our Customers Say</h2>
            <p class="text-muted">Real experiences from our satisfied customers.</p>
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card p-3 shadow-sm h-100">
                        <p class="fw-light">"Fantastic plumbing service! Fixed my leak in no time."</p>
                        <h5 class="fw-bold">- Alice Johnson</h5>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card p-3 shadow-sm h-100">
                        <p class="fw-light">"The best electricians! My house is now much safer."</p>
                        <h5 class="fw-bold">- Mark Williams</h5>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card p-3 shadow-sm h-100">
                        <p class="fw-light">"Professional and on time. Highly recommend for renovations!"</p>
                        <h5 class="fw-bold">- Sarah Lee</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Section -->
    <div class="container text-center my-5">
        <h2 class="fw-bold">Get in Touch</h2>
        <p class="text-muted">Have questions? Contact us now!</p>
        <a href="mailto:support@repairconstruction.com" class="btn btn-primary btn-lg">Email Us</a>
    </div>
</div>

<!-- FontAwesome for Icons -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
