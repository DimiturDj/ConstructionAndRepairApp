@model IEnumerable<RepairAndConstructionService.Models.Service>

<div class="container mt-4">
    <!-- Page Title with Icon -->
    <h2 class="text-center"><i class="fas fa-tools"></i> Our Services</h2>
    <p class="text-center text-muted">Browse through our wide range of home repair and construction services.</p>

    <div class="row">
        @foreach (var service in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm p-3 mb-4 text-center h-100"> <!-- h-100 ensures equal height -->
                    <div class="card-body d-flex flex-column align-items-center justify-content-between" style="min-height: 250px;">
                        <!-- Dynamic Icons Based on Service -->
                        @if (service.Title.Contains("Plumbing"))
                        {
                            <i class="fas fa-toilet fa-4x text-primary mb-3"></i> <!-- Toilet Icon for Plumbing -->
                        }
                        else if (service.Title.Contains("Painting"))
                        {
                            <i class="fas fa-paint-roller fa-4x text-primary mb-3"></i>
                        }
                        else if (service.Title.Contains("Electrician"))
                        {
                            <i class="fas fa-bolt fa-4x text-primary mb-3"></i>
                        }
                        else
                        {
                            <i class="fas fa-tools fa-4x text-primary mb-3"></i>
                        }

                        <!-- Service Details -->
                        <h5 class="fw-bold text-dark">@service.Title</h5>
                        <p class="text-muted text-center flex-grow-1">@service.Description</p>
                        <p class="fw-bold text-success">@service.Price.ToString("C", new System.Globalization.CultureInfo("bg-BG"))</p>

                        <!-- Booking Button -->
                        <a asp-controller="Booking" asp-action="Create" class="btn btn-primary mt-auto">
                            <i class="fas fa-calendar-check"></i> Book Now
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
