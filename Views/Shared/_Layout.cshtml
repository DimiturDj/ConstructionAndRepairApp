<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RepairAndConstructionService</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/images/maintenance-construction-icon-blue-color-design-vector-38667007.jpg" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Site-Specific CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RepairAndConstructionService.styles.css" asp-append-version="true" />

    <!-- FontAwesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <!-- Header and Navigation -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Logo & Brand Name -->
                <a class="navbar-brand fw-bold text-primary d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/images/maintenance-construction-icon-blue-color-design-vector-38667007.jpg"
                         alt="Logo" height="40" class="me-2">
                    Repair & Construction
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>

                        @if (User.IsInRole("Admin") || User.IsInRole("Worker"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Customer" asp-action="Index">
                                    <i class="fas fa-users"></i> Customers
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Booking" asp-action="Index">
                                    <i class="fas fa-calendar-check"></i> Bookings
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Service" asp-action="Index">
                                <i class="fas fa-tools"></i> Services
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Worker" asp-action="Index">
                                <i class="fas fa-people-carry"></i> Our Workers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Review" asp-action="Index">
                                <i class="fas fa-comments"></i> Reviews
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt"></i> Privacy Policy
                            </a>
                        </li>
                    </ul>

                    <!-- Authentication Buttons -->
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-primary"><i class="fas fa-user"></i> Hello, @User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                                    <button type="submit" class="btn btn-outline-danger">
                                        <i class="fas fa-sign-out-alt"></i> Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary me-2" asp-area="Identity" asp-page="/Account/Login">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">
                                    <i class="fas fa-user-plus"></i> Sign Up
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content Area -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted bg-light py-3">
        <div class="container text-center">
            <p class="mb-0">
                &copy; 2025 - Repair & Construction Service |
                <a asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a> |
                <a asp-controller="Service" asp-action="Index"><i class="fas fa-tools"></i> Services</a> |
                <a asp-controller="Worker" asp-action="Index"><i class="fas fa-people-carry"></i> Our Workers</a> |
                <a asp-controller="Customer" asp-action="Index"><i class="fas fa-users"></i> Customers</a> |
                <a asp-controller="Booking" asp-action="Index"><i class="fas fa-calendar-check"></i> Bookings</a> |
                <a asp-controller="Review" asp-action="Index"><i class="fas fa-comments"></i> Reviews</a> |
                <a asp-controller="Home" asp-action="Privacy"><i class="fas fa-shield-alt"></i> Privacy Policy</a>
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
