@model RepairAndConstructionService.Models.Review

<h1>Delete Review</h1>
<h4>Are you sure you want to delete this review?</h4>

<dl class="row">
    <dt class="col-sm-2">Customer</dt>
    <dd class="col-sm-10">@Model.Customer.Name</dd>

    <dt class="col-sm-2">Worker</dt>
    <dd class="col-sm-10">@Model.Worker.Name</dd>

    <dt class="col-sm-2">Comment</dt>
    <dd class="col-sm-10">@Model.Comment</dd>

    <dt class="col-sm-2">Rating</dt>
    <dd class="col-sm-10">@Model.Rating / 5</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
