@model RepairAndConstructionService.Models.Review

<h1>Edit Review</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label for="CustomerId" class="form-label">Customer</label>
        <select asp-for="CustomerId" class="form-control" asp-items="@(new SelectList(ViewBag.Customers, "Id", "Name"))">
            <option value="">Select a Customer</option>
        </select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="WorkerId" class="form-label">Worker</label>
        <select asp-for="WorkerId" class="form-control" asp-items="@(new SelectList(ViewBag.Workers, "Id", "Name"))">
            <option value="">Select a Worker</option>
        </select>
        <span asp-validation-for="WorkerId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="Comment" class="form-label">Comment</label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="Rating" class="form-label">Rating (1-5)</label>
        <input type="number" asp-for="Rating" class="form-control" min="1" max="5" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
