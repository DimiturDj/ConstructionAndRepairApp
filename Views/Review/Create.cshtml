@model RepairAndConstructionService.Models.Review

<h1>Add Review</h1>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Customer</label>
        <select asp-for="CustomerId" class="form-control" asp-items="@(new SelectList(ViewBag.Customers, "Id", "Name"))">
            <option value="">Select a Customer</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Worker</label>
        <select asp-for="WorkerId" class="form-control" asp-items="@(new SelectList(ViewBag.Workers, "Id", "Name"))">
            <option value="">Select a Worker</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Comment</label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Rating (1-5)</label>
        <input type="number" asp-for="Rating" class="form-control" min="1" max="5" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
