@model IEnumerable<RepairAndConstructionService.Models.Review>

<div class="container mt-4">
    <h2 class="text-center mb-4"><i class="fas fa-comments"></i> Customer Reviews</h2>

    <!-- Button to Add New Review -->
    <div class="text-center mb-4">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Review
        </a>
    </div>

    <!-- Reviews List in Card Format -->
    <div class="row">
        @foreach (var review in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-user"></i> @review.Customer.Name
                        </h5>
                        <p class="card-text">
                            <strong><i class="fas fa-user-tie"></i> Worker:</strong> @review.Worker.Name
                        </p>
                        <p class="card-text">
                            <strong><i class="fas fa-comment"></i> Comment:</strong> @review.Comment
                        </p>
                        <p class="card-text">
                            <strong><i class="fas fa-star"></i> Rating:</strong>
                            <span class="text-warning">@($"{review.Rating} / 5")</span>
                        </p>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@review.Id" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@review.Id" class="btn btn-info btn-sm text-white">
                                <i class="fas fa-eye"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@review.Id" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
