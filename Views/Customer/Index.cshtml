<div class="container mt-4">
    <!-- Page Header with Icon -->
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="text-black"><i class="fas fa-users"></i> Customers</h2>
        <a class="btn btn-primary" asp-controller="Customer" asp-action="Create">
            <i class="fas fa-user-plus"></i> Add New Customer
        </a>
    </div>

    <!-- Customer Cards -->
    <div class="row mt-3">
        @foreach (var customer in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-sm p-3 mb-4">
                    <div class="card-body text-center">
                        <i class="fas fa-user-circle fa-3x text-secondary mb-2"></i> <!-- Customer Icon -->
                        <h5 class="card-title fw-bold text-black">@customer.Name</h5>
                        <p class="text-black"><i class="fas fa-envelope"></i> @customer.Email</p>
                        <p class="text-black"><i class="fas fa-phone"></i> @customer.PhoneNumber</p>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-around mt-3">
                            <a class="btn btn-warning" asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.Id">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a class="btn btn-info text-white" asp-controller="Customer" asp-action="Details" asp-route-id="@customer.Id">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <a class="btn btn-danger" asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.Id">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
