@model RepairAndConstructionService.Models.Booking

<h1>Add Booking</h1>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Customer</label>
        <select asp-for="CustomerId" class="form-control" asp-items="@(new SelectList(ViewBag.Customers, "Id", "Name"))">
            <option value="">Select a Customer</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Worker</label>
        <select asp-for="WorkerId" class="form-control" asp-items="@(new SelectList(ViewBag.Workers, "Id", "Name"))">
            <option value="">Select a Worker</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Job Offer</label>
        <select asp-for="JobOfferId" class="form-control" asp-items="@(new SelectList(ViewBag.JobOffers, "Id", "Title"))">
            <option value="">Select a Job Offer</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Booking Date</label>
        <input type="date" asp-for="BookingDate" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Service Date</label>
        <input type="date" asp-for="ServiceDate" class="form-control" />
    </div>

    <div class="mb-3 form-check">
        <input type="checkbox" asp-for="IsCompleted" class="form-check-input" />
        <label class="form-check-label">Completed</label>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
