@model IEnumerable<RepairAndConstructionService.Models.Booking>

<h1>Bookings</h1>
<a asp-action="Create" class="btn btn-primary">Add New Booking</a>

<table class="table">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Worker</th>
            <th>Job Offer</th>
            <th>Booking Date</th>
            <th>Service Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.Customer.Name</td>
                <td>@booking.Worker.Name</td>
                <td>@booking.JobOffer.Title</td>
                <td>@booking.BookingDate.ToShortDateString()</td>
                <td>@booking.ServiceDate?.ToShortDateString()</td>
                <td>@(booking.IsCompleted ? "Completed" : "Pending")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@booking.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@booking.Id" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@booking.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
