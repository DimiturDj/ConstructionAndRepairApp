@model RepairAndConstructionService.Models.Booking

<h1>Booking Details</h1>

<dl class="row">
    <dt class="col-sm-2">Customer</dt>
    <dd class="col-sm-10">@Model.Customer.Name</dd>

    <dt class="col-sm-2">Worker</dt>
    <dd class="col-sm-10">@Model.Worker.Name</dd>

    <dt class="col-sm-2">Job Offer</dt>
    <dd class="col-sm-10">@Model.JobOffer.Title</dd>

    <dt class="col-sm-2">Booking Date</dt>
    <dd class="col-sm-10">@Model.BookingDate.ToShortDateString()</dd>

    <dt class="col-sm-2">Service Date</dt>
    <dd class="col-sm-10">@Model.ServiceDate?.ToShortDateString()</dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@(Model.IsCompleted ? "Completed" : "Pending")</dd>
</dl>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
