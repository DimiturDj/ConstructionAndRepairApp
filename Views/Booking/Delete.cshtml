@model RepairAndConstructionService.Models.Booking

<h1>Delete Booking</h1>
<h4>Are you sure you want to delete this booking?</h4>

<dl class="row">
    <dt class="col-sm-2">Customer</dt>
    <dd class="col-sm-10">@Model.Customer.Name</dd>

    <dt class="col-sm-2">Worker</dt>
    <dd class="col-sm-10">@Model.Worker.Name</dd>

    <dt class="col-sm-2">Job Offer</dt>
    <dd class="col-sm-10">@Model.JobOffer.Title</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
