@model IEnumerable<RepairAndConstructionService.Models.JobOffer>

<h1>Job Offers</h1>
<a asp-action="Create" class="btn btn-primary">Add New Job Offer</a>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var jobOffer in Model)
        {
            <tr>
                <td>@jobOffer.Title</td>
                <td>@jobOffer.Description</td>
                <td>@jobOffer.Price.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@jobOffer.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@jobOffer.Id" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@jobOffer.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
